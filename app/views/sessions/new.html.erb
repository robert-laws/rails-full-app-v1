<h1 class="title">Sign In Form</h1>

<%= render 'shared/flash' %>

<%= form_for(@user, url: sessions_create_path(@user), method: :post) do |f| %>
  <div class='field'>
    <%= f.label :username, class: 'label' %>
    <div class='control'>
      <%= f.text_field :username, class: 'input', placeholder: 'Username' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :password, class: 'label' %>
    <div class='control'>
      <%= f.password_field :password, class: 'input', placeholder: 'Password' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit 'Submit', class: 'button is-info' %>
    </div>
  </div>  
<% end %>