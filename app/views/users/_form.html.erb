<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :experience %>
  <%= f.number_field :experience %><br>

  <%= f.label :credits %>
  <%= f.number_field :credits %><br>

  <%= f.label :admin %>
  <%= f.check_box :admin %><br>

  <%= f.submit %>
<% end %>